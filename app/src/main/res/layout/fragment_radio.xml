<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ExtraFragments.RadioFragment"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/firstGal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/firstGalImageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_white_galochka"
                            android:padding="7dp"
                            android:background="@drawable/green_circle"
                            />
                    <TextView
                        android:id="@+id/firstGalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Низкий"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/secondGal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/secondGalImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_white_galochka"
                    android:padding="7dp"
                    android:background="@drawable/green_circle"
                    />
                <TextView
                    android:id="@+id/secondGalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Средний"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/thirdGal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">
                        <ImageView
                            android:id="@+id/thirdGalImageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_white_galochka"
                            android:padding="7dp"
                            android:background="@drawable/green_circle"
                            />
                    <TextView
                        android:id="@+id/thirdGalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Высокий"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

        </LinearLayout>
</LinearLayout>