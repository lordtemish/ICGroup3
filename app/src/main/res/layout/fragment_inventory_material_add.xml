<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ObjectFragments.InventoryMaterialAddFragment"
    android:background="@color/light_grey"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:onClick="onBackPressed"
                android:src="@drawable/ic_backarr"
                android:tag="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mainObjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заявка на пополнение"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:onClick="openDrawerOn"
                android:src="@drawable/ic_menu_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/whiterow_page"
                    >
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="180dp"
                            android:text="Aqua clean"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/idTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="OKK138400145"
                            android:textColor="@color/darkgrey"
                            android:textSize="11sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />
                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:maxWidth="150dp"
                                android:text="Период пользования\n1шт./1 ОПУ на 1 месяц"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/numbersTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Расход на сегодня "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/num1TextView" />

                            <TextView
                                android:id="@+id/num1TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11/"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/num2TextView" />

                            <TextView
                                android:id="@+id/num2TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="@color/darkgrey"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2">

                            <ProgressBar
                                android:id="@+id/ProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="15sp"
                                android:layout_gravity="center"
                                android:paddingBottom="5sp"
                                android:paddingTop="5sp"
                                android:progress="60"
                                android:progressDrawable="@drawable/green_progress_perc"
                                android:secondaryProgress="100" />
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey">

                    </FrameLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Отдел"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:text="Снабжение"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:text="Ответственный за исполнение"
                            />
                        <LinearLayout
                            android:id="@+id/spinnerLinear"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/spinner_back"
                            android:orientation="horizontal"
                            >

                            <Spinner
                                android:id="@+id/employeeChangeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <FrameLayout
                                android:id="@+id/spinnerFrameImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"

                                    android:src="@drawable/ic_arrowdown_green" />
                            </FrameLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="Приоритет"
                            />
                        <FrameLayout
                            android:id="@+id/radioFrameLaoyut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            ></FrameLayout>
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:text="Тип заявки"
                            />
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/spinnerSecLinear"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/spinner_back"
                            android:orientation="horizontal"
                            >

                            <Spinner
                                android:id="@+id/typeChangeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <FrameLayout
                                android:id="@+id/typeSpinnerFrameImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"

                                    android:src="@drawable/ic_arrowdown_green" />
                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <com.studio.crm.icgroup.ExtraFragments.BigCounterView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bigCounterView"
                        android:layout_marginTop="20dp"></com.studio.crm.icgroup.ExtraFragments.BigCounterView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textSize="11sp"
                        android:text="Написать комментарий"
                        />
                    <FrameLayout
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/commentEditTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/black_line"
                        >
                        <EditText
                            android:id="@+id/commentEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:hint="Вводить сюда"
                            android:textColorHint="@color/black"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/light_grey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingBottom="20dp"
                        android:orientation="vertical">
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:id="@+id/calendarImageView"
                                android:src="@drawable/ic_calendar_pic"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:text="Указать срок исполнения"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="15dp"
                                app:layout_constraintStart_toEndOf="@+id/calendarImageView"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <RadioGroup
                            android:layout_marginTop="10dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/todayRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:button="@drawable/radiobutton"
                                android:checked="true"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:text=" Необходимо выполинть сегодня"
                                />
                            <RadioButton
                                android:id="@+id/datesRadioButton"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:button="@drawable/radiobutton"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:text=" Выбрать дату завершения"
                                />
                        </RadioGroup>
                        <com.studio.crm.icgroup.ExtraFragments.TimePickView
                            android:layout_marginTop="10dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/counterView"
                            />
                        <com.studio.crm.icgroup.ExtraFragments.CalendarView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/calendarView"
                            android:layout_marginTop="10dp"
                            />

                        <LinearLayout
                            android:layout_marginTop="20sp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/addTextView"
                                android:layout_marginStart="5sp"
                                android:layout_marginEnd="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/greenbutton"
                                android:textColor="@color/white"
                                android:text="Добавить задачу"
                                android:textSize="15sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icgGreenTra"
        android:onClick="onClick"
        android:visibility="gone"
        android:id="@+id/progressLayout"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>
</LinearLayout>


