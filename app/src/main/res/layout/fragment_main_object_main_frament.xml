<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ObjectFragments.MainObjectMainFrament"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50sp"
        >
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/backArrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_backarr"
            android:onClick="onBackPressed"
            android:tag="0"
            />
        <TextView
            android:id="@+id/mainObjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Объекты"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_menu_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"

            android:onClick="openDrawerOn"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v4.widget.NestedScrollView
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:background="@drawable/white_page"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/mainObjectMainFragmentNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:text="ТРЦ Москва метрополитен"/>
                        <LinearLayout
                            android:divider="@drawable/transparent"
                            android:padding="7sp"
                            android:layout_width="170sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/mainObjectMainFragmentFav0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_staryellow"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/mainObjectMainFragmentFav1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_staryellow"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/mainObjectMainFragmentFav2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_staryellow"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/mainObjectMainFragmentFav3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_stargrey"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/mainObjectMainFragmentFav4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_stargrey"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                        </LinearLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:layout_height="90sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mainObjectMainFramentEmployeesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:gravity="center"
                        android:text="69"
                        android:textColor="@color/black"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:text="Сотрудников"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mainObjectMainFramentCommsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:gravity="center"
                        android:text="18"
                        android:textColor="@color/black"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:text="Жалоб"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mainObjectMainFramentCategoryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:gravity="center"
                        android:text="Категория"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
          />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20sp"
                android:id="@+id/mainObjectMainFramentProgressRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:paddingEnd="20sp"
                android:paddingRight="20sp"
                android:layout_marginBottom="20sp"
                android:nestedScrollingEnabled="true"

                >

            </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mainObjectMainFramentButtonsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
            <LinearLayout
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/phonesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    >

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>