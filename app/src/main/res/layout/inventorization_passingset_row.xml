<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:id="@+id/headerLayout">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:text="Поломоющая машина"
            android:maxWidth="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/idTextView"
            />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="OK050545454"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/idTextView"
            app:layout_constraintStart_toEndOf="@+id/idTextView"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="5 шт"
            android:id="@+id/numberTextView"
            />
        <ImageView
            android:id="@+id/statusImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/green_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp"
            android:src="@drawable/ic_white_galochka"
            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/extraLayout">
       <!-- <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/radioFrame"/> -->
        <com.studio.crm.icgroup.ExtraFragments.RadioButtonView
            android:id="@+id/radioButtonView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        </com.studio.crm.icgroup.ExtraFragments.RadioButtonView>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="Комментарий:"
                />
            <FrameLayout
                android:id="@+id/commentEditTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/black_line"
                >
                <EditText
                    android:id="@+id/commentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:hint="Вводить сюда"
                    android:textColorHint="@color/black"
                    />
            </FrameLayout>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/saveTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/greenbutton_rec"
                android:gravity="center"
                android:text="Сохранить"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"/>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:background="@color/icgGreenTra"
        android:id="@+id/progressFrame"
        >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>