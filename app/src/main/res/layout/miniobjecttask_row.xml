<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/perfomanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_grey"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingStart="20dp" android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="Личная успеваемость"
                android:id="@+id/perfomanceTextView"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rateRecyclerView"
                app:layout_constraintTop_toBottomOf="@+id/perfomanceTextView"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/ic_arrowright"
                android:background="@drawable/green_circle"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <LinearLayout
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <ProgressBar
                        android:id="@+id/ProgressBar"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:progress="100"

                        android:progressDrawable="@drawable/horizontal_progress_percentage"
                        android:secondaryProgress="100"
                        style="?android:attr/progressBarStyleHorizontal"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    >
                    <TextView
                        android:id="@+id/PercentageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="100%"
                        />
                </FrameLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</FrameLayout>