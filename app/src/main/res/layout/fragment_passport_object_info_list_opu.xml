<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ObjectFragments.PassportObjectInfoListOPUFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50sp"
        >
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/backArrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_backarr"
            android:onClick="onBackPressed"
            android:tag="0"
            />
        <TextView
            android:id="@+id/mainObjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОПУ объекта"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_menu_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"

            android:onClick="openDrawerOn"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/white_page"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="80dp"
                android:paddingRight="10sp"
                android:paddingEnd="20sp"
                android:paddingStart="20sp"
                android:paddingLeft="10sp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/circlePhoneImageView"
                    android:layout_width="43sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circlephoneicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <LinearLayout
                    android:id="@+id/linearNames"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circlePhoneImageView"

                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Иванов Иванов Иванович"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/positionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ОПУ"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/arrowImageView"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:padding="7sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/linearNames"
                    android:src="@drawable/ic_arrowright"
                    android:background="@drawable/green_circle"
                    />
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:id="@+id/checkRadio"
                    android:clickable="false"
                    android:text=" 20000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton4"
                    android:checked="true"
                    app:layout_constraintStart_toStartOf="@+id/linearNames"
                    app:layout_constraintTop_toBottomOf="@+id/linearNames" />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/grey_corners_line"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:id="@+id/holidayLayout"
                >
                <TextView
                    android:id="@+id/holidayTypeTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:maxWidth="200dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="В отпуске (c cодержанием)"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/greenbutton"
                    />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/holidayTypeTextView"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="Без содержания"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/holidayDate"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="@string/datestring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:paddingStart="40sp"
                android:paddingLeft="40sp"
                android:paddingEnd="40sp"
                android:paddingRight="40sp">
                <LinearLayout
                    android:id="@+id/newCommentLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/newCommentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="46sp"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Посещения"
                        android:gravity="center"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="4sp"
                        android:id="@+id/newCommentFrameLayout"
                        android:background="@color/icgGreen"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/allCommentsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/allCommentsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="46sp"
                        android:textColor="@color/greyy"
                        android:textSize="17sp"
                        android:text="Жалобы"
                        android:gravity="center"

                        />
                    <FrameLayout
                        android:layout_width="match_parent"


                        android:layout_height="4sp"
                        android:visibility="gone"
                        android:id="@+id/allCommentsFrameLayout"
                        android:background="@color/icgGreen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_grey"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/attendanceLayout">
                    <LinearLayout
                        android:background="@drawable/greycornerspage_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        >
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="35dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgrey"
                                android:textSize="13sp"
                                android:id="@+id/planWorkTextView"
                                android:text="План работ:20/16"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"

                                />
                            <ImageView
                                android:id="@+id/arrowPlanImageView"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/green_circle"
                                android:src="@drawable/ic_arrowdown"
                                android:padding="5dp"
                                />
                        </android.support.constraint.ConstraintLayout>
                        <com.studio.dynamica.icgroup.ExtraFragments.BigCounterView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:id="@+id/counterView"
                            ></com.studio.dynamica.icgroup.ExtraFragments.BigCounterView>
                    </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="20sp"
                    android:paddingStart="20sp"
                    >

                    <LinearLayout
                        android:id="@+id/dateLayout"
                        android:layout_marginTop="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/attendaceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_width="15sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrowdown_green"/>
                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="Январь 2018"
                            android:gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10sp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/dateLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            >
                            <ProgressBar
                                android:id="@+id/ProgressBar"
                                android:paddingTop="5sp"
                                android:paddingBottom="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="15sp"
                                android:layout_gravity="center"
                                android:progress="60"

                                android:progressDrawable="@drawable/horizontal_progress_percentage"
                                android:secondaryProgress="100"
                                style="?android:attr/progressBarStyleHorizontal"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            >
                            <TextView
                                android:id="@+id/PercentageTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="55%"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        >
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/green_circle_line"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="23sp"
                                android:text="1"
                                android:id="@+id/replacedTextView"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/replacedTextView"
                                >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:textColor="@color/black"
                                        android:textSize="11sp"
                                        android:text="Подменял коллег в этом месяце"
                                        android:id="@+id/replaceLabelTextView"
                                        />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:textColor="@color/black"
                                    android:textSize="11sp"
                                    android:text="Дополнительных рабочих дней"
                                    android:id="@+id/replaceTextView"
                                    />
                            </LinearLayout>
                    </android.support.constraint.ConstraintLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/replacerRecyclerView"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/commentsLayout">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="Новые жалобы"
                        android:maxWidth="200dp"
                        />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10sp"
                    android:id="@+id/commentsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp">

                </android.support.v7.widget.RecyclerView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/darkgrey"
                        android:textSize="15sp"
                        android:text="Архив жалоб"
                        android:maxWidth="200dp"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10sp"
                        android:id="@+id/archiveCommentsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_grey"
                    />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="250sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:paddingEnd="20sp"
                    android:paddingStart="20sp"
                    >
                        <TextView
                            android:id="@+id/employeeChangeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:text="Замена сотрудника на сегодня:"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            />

                    <LinearLayout
                        android:id="@+id/spinnerLinear"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                        android:layout_marginTop="50sp"
                        android:background="@drawable/spinner_back"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/employeeChangeTextView">

                        <Spinner
                            android:id="@+id/employeeChangeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:spinnerMode="dropdown" />

                        <FrameLayout
                            android:id="@+id/spinnerFrameImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <ImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"

                                android:src="@drawable/ic_arrowdown_green" />
                        </FrameLayout>

                    </LinearLayout>

                        <TextView
                            android:id="@+id/employeeChangeButton"
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:textColor="@color/darkgrey"
                            android:text="Замена сотрудника"
                            android:textSize="18sp"
                            android:gravity="center"
                            app:layout_constraintTop_toBottomOf="@+id/spinnerLinear"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="40sp"
                            android:background="@drawable/grey_circle_line"
                            />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp">

                    <TextView
                        android:id="@+id/employeeDropTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Уволнение сотрудника"
                        android:textColor="@color/darkgrey"
                        android:textSize="20sp" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:background="@color/icgGreenTra">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>