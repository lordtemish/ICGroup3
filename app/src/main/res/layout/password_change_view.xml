<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/icgGreenTra"
    android:onClick="onBackPressed">
            <android.support.constraint.ConstraintLayout
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/whiterow_page"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/oldLayout"
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/black_line"
                        >
                        <EditText
                            android:id="@+id/oldEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:hint="Старый пароль"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/newLayout"
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/black_line"
                        >
                        <EditText
                            android:id="@+id/newEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:hint="Новый пароль"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/new2Layout"
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@drawable/black_line"
                        >
                        <EditText
                            android:id="@+id/new2EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:hint="Повторите пароль"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            />
                    </FrameLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/greenbutton"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        >
                        <TextView
                            android:id="@+id/addTextView"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/white"
                            android:text="Сменить пароль"
                            android:textSize="15sp"
                            />
                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/icgGreenTra"
            android:onClick="onClick"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </FrameLayout>
</FrameLayout>