<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10sp"

    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/whiterow_page"
    xmlns:app="http://schemas.android.com/apk/res-auto">
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Будние дни"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10sp"
                />
        <TextView
            android:id="@+id/schInfo"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/days"
            />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/schInfo">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/lightgreen_corners_page"
        android:id="@+id/firstSmena"
        android:layout_marginBottom="10sp"
        >
        <TextView
            android:id="@+id/firstSmenaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:text="1-ая смена"
            />
        <TextView
            android:id="@+id/firstSmenaTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:text="c 07:00 до 23:00"
            />
    </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/secondSmena"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/green_corners_page"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"

            >
            <TextView
                android:id="@+id/secondSmenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:text="2-ая смена"
                />
            <TextView
                android:id="@+id/secondSmenaTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:text="c 23:00 до 07:00"
                />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/lightgreen_corners_page"
            android:id="@+id/thirdSmena"
            android:layout_marginBottom="10sp"

            >
            <TextView
                android:id="@+id/thirdSmenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:text="1-ая смена"
                />
            <TextView
                android:id="@+id/thirdSmenaTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:text="c 07:00 до 23:00"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/green_corners_page"
            android:id="@+id/fourthSmena"
            android:layout_marginBottom="10sp"

            >
            <TextView
                android:id="@+id/fourthSmenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:text="1-ая смена"
                />
            <TextView
                android:id="@+id/fourthSmenaTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:text="c 07:00 до 23:00"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/lightgreen_corners_page"
            android:id="@+id/fifthSmena"
            android:layout_marginBottom="10sp"

            >
            <TextView
                android:id="@+id/fifthSmenaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:text="1-ая смена"
                />
            <TextView
                android:id="@+id/fifthSmenaTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:text="c 07:00 до 23:00"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>