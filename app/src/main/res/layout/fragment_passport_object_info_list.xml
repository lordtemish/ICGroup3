<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    tools:context=".ObjectFragments.PassportObjectInfoListFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_page"
            android:orientation="vertical"
            android:paddingBottom="20sp"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50sp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/black"
                    android:text="Общие данные"
                    android:textSize="13sp"
                    />
                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="20sp"
                        android:layout_marginRight="20sp"
                        android:src="@drawable/ic_arrrowdowngreen"
                        />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/infoListObjectNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Наименование объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListRegionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/infoListWorkStartTextView"
                        app:layout_constraintBottom_toTopOf="@+id/infoListObjectAreaTextView"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Регион"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListObjectAddressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/infoListObjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"

                        />
                    <TextView
                        android:id="@+id/infoListObjectAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                <TextView
                    android:id="@+id/infoListWorkStartTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="11sp"
                    android:textColor="@color/darkgrey"
                    android:text="Начало работы"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/infoListWorkStopTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infoListWorkStartTextView"
                    app:layout_constraintBottom_toTopOf="@+id/infoListObjectAreaTextView"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="11sp"
                    android:textColor="@color/darkgrey"
                    android:text="Конец работы"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/infoListObjectAreaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:textSize="11sp"
                    android:textColor="@color/darkgrey"
                    android:text="Площадь объекта"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                <TextView
                    android:id="@+id/infoListWorkStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Адрес объекта"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/infoListWorkStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Адрес объекта"
                    android:layout_weight="1"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/infoListObjectArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Адрес объекта"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/infoListHeadTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Начальник производства"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListAdvisorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/infoListWorkStartTextView"
                        app:layout_constraintBottom_toTopOf="@+id/infoListObjectAreaTextView"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Куратор"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListAdministratorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Администратор"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/infoListHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/infoListAdvisor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"

                        />
                    <TextView
                        android:id="@+id/infoListAdministrator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/infoListClientTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Клиент"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/infoListClientPreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:textSize="11sp"
                        android:textColor="@color/darkgrey"
                        android:text="Ответсвенное лицо"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/infoListClient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/infoListClientPre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:text="Адрес объекта"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phonesRecyclerView"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:paddingEnd="20sp"
            android:paddingRight="20sp"
            android:orientation="horizontal">
            <TextView
                android:tag="0"
                android:id="@+id/firstSmena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="1-ая смена"
                />
            <TextView
                android:tag="1"
                android:id="@+id/SecondSmena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/greyy"
                android:textSize="13sp"
                android:text="2-ая смена"
                />
            <TextView
                android:tag="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/greyy"
                android:textSize="13sp"
                android:text="3-яя смена"
                android:id="@+id/thirdSmena"
                />
            <TextView
                android:tag="3"
                android:id="@+id/interns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/greyy"
                android:textSize="13sp"
                android:text="Стажировщик"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/progressPhoneRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/addNewEmployeeLayout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/greenbutton">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="Добавить сотрудника"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                   android:src="@drawable/ic_plus_lightgreen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/icgGreenTra"
        android:onClick="onClick"
        android:id="@+id/progressLayout"
        >
            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/progressBar"
                />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>