<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/galochkaImageView"
                android:src="@drawable/ic_greyround_galochka"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/galochkaImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/lin"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTextView"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:text="Brilliant"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vendorTextView"
                    android:textColor="@color/darkgrey"
                    android:textSize="11sp"
                    android:text="IC56464544"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/minusTextView"
                    android:text="-"
                    android:background="@drawable/transparent_grey_clicked_background"
                    />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/numberTextView"
                    android:textSize="25sp"
                    android:text="8"
                    android:background="@drawable/transparent_grey_clicked_background"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/plusTextView"
                    android:text="+"
                    android:background="@drawable/transparent_grey_clicked_background"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/mainObjectRowLinearLayout"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/dayLeftLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="Остаток продукта: "
                    android:textSize="11sp"
                    android:gravity="start|center_vertical"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num1"
                        android:textColor="@color/black"
                        android:text="11/"
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/num2"
                        android:textColor="@color/darkgrey"
                        android:text="30"
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <TextView
                        android:id="@+id/unitLabelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="ед. изм.  "
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        />
                    <TextView
                        android:id="@+id/unitTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgrey"
                        android:text="литр"
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        />

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ProgressBar
                        android:id="@+id/ProgressBar"
                        android:paddingTop="5sp"
                        android:paddingBottom="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:progress="60"

                        android:progressDrawable="@drawable/horizontal_progress_percentage"
                        android:secondaryProgress="100"
                        style="?android:attr/progressBarStyleHorizontal"
                        />
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>