<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10sp"
    android:layout_height="80sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/phonesRowLayout1"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/whiterow_page"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/phonesRowNameTextView1"

            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="Рыскулова Н"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/phonesRowPositionTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"

            android:text="Представитель клиента"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phonesRowNameTextView1"


            />
        <ImageView
            android:layout_width="43sp"
            android:layout_height="43sp"

            android:src="@drawable/ic_circlephoneicon"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"

            android:id="@+id/phonesRowPhoneImageView"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/phonesRowLayout"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/icgreen_page"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/phonesRowNameTextView"

            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Рыскулова Н"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/phonesRowPositionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"

            android:text="Представитель клиента"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phonesRowNameTextView"


            />
        <ImageView
            android:layout_width="43sp"
            android:layout_height="43sp"

            android:src="@drawable/ic_circlephoneiconclicked"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"

            android:id="@+id/phonesRowPhoneClickedImageView"
            />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

