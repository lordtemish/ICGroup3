<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ObjectFragments.ServiceObjectMainFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50sp"
            >
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:id="@+id/backArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:src="@drawable/ic_backarr"
                android:onClick="onBackPressed"
                android:tag="0"
                />
            <TextView
                android:id="@+id/mainObjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доп. работы"
                android:textSize="17sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_menu_main"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"

                android:onClick="openDrawerOn"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout

                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="60sp"
                    android:orientation="horizontal"
                    >
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/allOtdelsLayout"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/allOtdelsImageVIew"
                            android:padding="2sp"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/allOtdelsTextView"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="10sp"
                            android:layout_marginEnd="10sp"
                            android:src="@drawable/ic_arrowdown_green"/>
                        <TextView
                            android:id="@+id/allOtdelsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/darkgrey"
                            android:text="Все отделы"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"

                            />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/allEmployeesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/allEmployeesImageView"
                            android:layout_width="20sp"
                            android:padding="2sp"
                            android:layout_height="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/allEmployeesTextView"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginRight="10sp"
                            android:layout_marginEnd="10sp"
                            android:src="@drawable/ic_arrowdown_green"/>
                        <TextView
                            android:id="@+id/allEmployeesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/darkgrey"
                            android:text="Все сотрудники"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"

                            />
                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_page"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_height="50sp">
                        <ImageView
                            android:id="@+id/arrowCalendarImageView"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:padding="10dp"
                            android:src="@drawable/ic_arrowdown_green"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/calendarTextView"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            android:background="@drawable/greybutton_rec"

                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="Январь 2018"
                            />
                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/monthPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/arrowCalendarImageView"
                            app:np_textColor="@color/greyy"
                            app:np_textSize="11sp"
                            app:np_selectedTextColor="@color/black"
                            app:np_selectedTextSize="15sp"
                            >
                        </com.shawnlin.numberpicker.NumberPicker>
                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/yearPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/monthPicker"
                            app:np_textColor="@color/greyy"
                            app:np_textSize="11sp"
                            app:np_selectedTextColor="@color/black"
                            app:np_selectedTextSize="15sp"
                            >
                        </com.shawnlin.numberpicker.NumberPicker>
                        <FrameLayout
                            android:id="@+id/addNewServiceFrameLayout"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            >

                            <ImageView
                                android:id="@+id/addNewServiceImageView"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_gravity="center"
                                android:background="@drawable/green_circle"
                                android:gravity="center"
                                android:padding="7sp"
                                android:src="@drawable/ic_plus"

                                />
                        </FrameLayout>

                    </android.support.constraint.ConstraintLayout>
                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            >
                            <ProgressBar
                                android:id="@+id/ProgressBar"
                                android:paddingTop="5sp"
                                android:paddingBottom="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="15sp"
                                android:layout_gravity="center"
                                android:progress="60"

                                android:progressDrawable="@drawable/horizontal_progress_percentage"
                                android:secondaryProgress="100"
                                style="?android:attr/progressBarStyleHorizontal"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            >
                            <TextView
                                android:id="@+id/PercentageTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:text="55%"
                                />
                        </FrameLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/graphLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <com.studio.crm.icgroup.ExtraFragments.ServiceSortView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/serviceSortView"
                            />
                        <com.studio.crm.icgroup.ExtraFragments.GraphicDateFrame
                            android:id="@+id/graphicDateFrame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/light_grey"
                        />
                    <android.support.constraint.ConstraintLayout
                        android:layout_marginTop="10sp"
                        android:id="@+id/allServicesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        >
                        <TextView
                            android:id="@+id/allServicesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="Сортировать"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            />
                        <ImageView
                            android:id="@+id/allServicesImageView"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:background="@drawable/green_circle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="10sp"
                            android:layout_marginRight="10sp"
                            android:padding="7sp"
                            android:src="@drawable/ic_arrowdown"
                            />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <ImageView
                        android:id="@+id/leftImageTop"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="9dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/green_circle"
                        android:src="@drawable/ic_arrowwhiteleft"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/pagesRecyclerUp"
                        android:layout_width="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/leftImageTop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        ></android.support.v7.widget.RecyclerView>
                    <ImageView
                        android:id="@+id/rightImageTop"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="9dp"
                        android:background="@drawable/green_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintStart_toEndOf="@+id/pagesRecyclerUp"
                        android:src="@drawable/ic_arrowwhiteright"
                        />
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/allServicesRecyclerView"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <ImageView
                        android:id="@+id/leftImageBot"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="9dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/green_circle"

                        android:src="@drawable/ic_arrowwhiteleft"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/pagesRecyclerBot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/leftImageBot"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <ImageView
                        android:id="@+id/rightImageBot"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="9dp"
                        android:background="@drawable/green_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintStart_toEndOf="@+id/pagesRecyclerBot"
                        android:src="@drawable/ic_arrowwhiteright"
                        />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <com.studio.crm.icgroup.ExtraFragments.MainObjectSetInfoFragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/setFragment"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/icgGreenTra"
        android:onClick="onClick"
        android:id="@+id/progressLayout"><ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        /></FrameLayout>
    <com.studio.crm.icgroup.ExtraFragments.YearMonthView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yearMonthView"
        android:visibility="gone"
        android:background="@color/icgGreenTra"
        />
</FrameLayout>